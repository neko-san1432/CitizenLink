{
  "name": "citizenlink",
  "version": "2.0.0",
  "description": "Modern Citizen Complaint Management System with Clean Architecture",
  "type": "commonjs",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js --watch src --watch config",
    "prod": "NODE_ENV=production node server.js",
    "test": "jest",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "build:css": "tailwindcss -i ./src/styles/tailwind.css -o ./public/css/app.css --minify",
    "build": "npm run build:css",
    "check": "node scripts/healthcheck.js"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.57.4",
    "chart.js": "^4.5.0",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "helmet": "^8.1.0",
    "multer": "^2.0.2"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.0",
    "@microsoft/eslint-formatter-sarif": "^3.1.0",
    "gzip-cli": "^1.0.0",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18"
  },
  "keywords": [
    "citizen",
    "complaint",
    "management",
    "security",
    "express",
    "bootstrap"
  ],
  "author": "CitizenLink Team",
  "license": "MIT"
}
