{
  "name": "citizenlink",
  "version": "2.0.0",
  "description": "Modern Citizen Complaint Management System with Clean Architecture",
  "type": "commonjs",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js --watch src --watch config",
    "prod": "NODE_ENV=production node server.js",
    "test": "jest",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "build:css": "tailwindcss -i ./src/styles/tailwind.css -o ./public/css/app.css --minify",
    "codeql-scan": "node scripts/codeql-local-scan.js",
    "codeql-scan-verbose": "node scripts/codeql-local-scan.js --verbose",
    "codeql-scan-sarif": "node scripts/codeql-local-scan.js --output-format=sarif",
    "security-scan": "node scripts/security-autoresolve.js",
    "security-audit": "node scripts/security-audit.js",
    "security-audit-npm": "npm audit --audit-level=moderate",
    "security-fix": "npm run security-audit-npm && npm audit fix && npm run lint:fix",
    "setup-dev": "node scripts/setup-dev-env.js",
    "rate-limit": "node scripts/rate-limit-manager.js",
    "cleanup": "node scripts/cleanup-unused-files.js"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.57.4",
    "chart.js": "^4.5.0",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "helmet": "^8.1.0",
    "isomorphic-dompurify": "^1.8.0",
    "multer": "^2.0.2",
    "validator": "^13.11.0",
    "xss": "^1.0.14"
  },
  "devDependencies": {
    "@microsoft/eslint-formatter-sarif": "^3.1.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.0",
    "eslint-plugin-no-unsanitized": "^4.1.4",
    "eslint-plugin-security": "^3.0.1",
    "gzip-cli": "^1.0.0",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18"
  },
  "keywords": [
    "citizen",
    "complaint",
    "management",
    "security",
    "express",
    "bootstrap"
  ],
  "author": "CitizenLink Team",
  "license": "MIT"
}
